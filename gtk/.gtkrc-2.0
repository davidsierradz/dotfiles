gtk-theme-name="Vertex-Maia-Dark"
gtk-icon-theme-name="Breeze-Maia-Dark"
gtk-font-name="Noto Sans 10"
gtk-cursor-theme-name="Breeze"
gtk-xft-antialias=1
gtk-xft-hinting=1
gtk-xft-hintstyle="hintfull"
gtk-xft-rgba="rgb"

style "vimfix" {
  bg[NORMAL] = "#002b36" # this matches my gvim theme 'Normal' bg color.
  #bg[NORMAL] = "#FFFFFF" # this matches my gvim theme 'Normal' bg color.
}
widget "vim-main-window.*GtkForm" style "vimfix"

style "no-resize-handle"
{
        GtkWindow::resize-grip-height = 0
            GtkWindow::resize-grip-width = 0
}

class "GtkWidget" style "no-resize-handle"
